<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sihati_labo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SihatiLabo">

        <service android:name=".notification.FirebaseService"
            android:permission="com.google.android.c2dm.permission.SEND"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>
        </service>

        <activity
            android:name=".pages.scheduleDetails.ScheduleDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".pages.createSchedulePage.CreateScheduleActivity"
            android:exported="false" />
        <activity
            android:name=".pages.settingPage.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".pages.authPages.RecoverPassWordActivity"
            android:exported="false" />
        <activity
            android:name=".pages.authPages.SignupActivity"
            android:exported="true" >

        </activity>
        <activity
            android:name=".pages.authPages.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sihati_labo.pages.mainPage.MainActivity"
            android:exported="true"/>
    </application>

</manifest>